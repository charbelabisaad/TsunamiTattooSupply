
<style>

    .color-only-picker {
        width: 38px;
        height: 38px;
        padding: 0;
        border: 1px solid #ced4da;
        border-radius: 4px;
        cursor: pointer;
        background: none;
    }

    /* Chrome, Edge, Safari */
    .color-only-picker::-webkit-color-swatch-wrapper {
        padding: 0;
    }

    .color-only-picker::-webkit-color-swatch {
        border: none;
        border-radius: 4px;
    }

    /* Firefox */
    .color-only-picker::-moz-color-swatch {
        border: none;
        border-radius: 4px;
    }

</style>


<div class="modal fade" id="saveColorModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 id="modalColorTitle" class="modal-title"></h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form id="colorForm" method="post">
                <div class="modal-body">

                    <div class="row align-items-center mb-3">
                        <input id="ColorID" type="hidden" value="0" />


                        <!-- 🔹 Label -->
                        <div class="col-12 col-md-2 d-flex align-items-center">
                            <label for="ColorName" class="form-label mb-0">Name</label>
                        </div>

                        <!-- 🔹 Input -->
                        <div class="col-12 col-md-8 d-flex align-items-center">
                            <div class="w-100">
                                <input type="text" class="form-control" id="ColorName" placeholder="Fill Name" />
                                <div id="ColorNameMessage" class="text-danger fw-normal"></div>
                            </div>
                        </div>
 
                        <!-- 🔹 Status Toggle -->
                        <div class="col-12 col-md-2 d-flex align-items-center justify-content-md-start">
                            <div class="custom-control custom-switch m-0">
                                <input type="checkbox" class="custom-control-input" id="ColorStatusToggle" checked>
                                <label class="custom-control-label" for="ColorStatusToggle" id="ColorStatusLabel">Active</label>
                                <input type="hidden" id="ColorStatusID" name="ColorStatusID" value="A">
                            </div>
                        </div>
                    </div>

                    <div class="row align-items-center mb-3">
                         
                        <!-- 🔹 Label -->
                        <div class="col-12 col-md-2 d-flex align-items-center">
                            <label for="ColorCode" class="form-label mb-0">Code</label>
                        </div>

                        <div class="col-12 col-md-8 d-flex align-items-center">

                            <div class="row w-100">

                                <div class="col-12 col-md-8">

									<!-- Color picker -->
									<input type="color"
										   id="ColorPicker"
										   class="form-control"
										   value="#915555" />

                                </div>

                                <div class="col-12 col-md-4">

									<!-- Read-only HEX -->

                                    <input type="text"
                                           id="ColorCode"
                                           class="form-control"
                                           placeholder="Color Hex. Code"
                                           maxlength="6">


                                </div>
                                 
                                <div id="ColorCodeMessage" class="text-danger fw-normal"></div>
                            </div>
                        </div>



                        <!-- 🔹 Status Toggle -->
                        <div class="col-12 col-md-2 d-flex align-items-center justify-content-md-start">
                            <div class="custom-control custom-switch m-0">
                                <input type="checkbox" class="custom-control-input" id="ColorIsCustomToggle">
                                <label class="custom-control-label" for="ColorIsCustomToggle" id="ColorIsCustomLabel">Is Custom</label> 
                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <div class="row w-100">
                        <!-- Validation/Error message -->
                        <div id="modalColorMessage" class="col-md-7 d-flex align-items-center text-danger" style="display:none;">
                            <!-- message goes here -->
                        </div>

                        <!-- Buttons -->
                        <div class="col-md-5 d-flex align-items-center justify-content-end">
                            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">
                                <i class="fas fa-ban"></i> Cancel
                            </button>

                            <button id="btnSaveColor" type="button" class="btn btn-primary ml-2">
                                <span class="spinner-border spinner-border-sm d-none" id="btnSaveColorSpinner" role="status" aria-hidden="true"></span>
                                <i class="fas fa-save"></i> Save
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    document.addEventListener("DOMContentLoaded", function () {

       // Init when modal opens
        $('#saveColorModal').on('shown.bs.modal', function () {
            syncColorCode();
        });

        // Picker → HEX
        $('#ColorPicker').on('input change', function () {
            $('#ColorCode').val(this.value.toUpperCase.replace('#',''));
        });

        $('#ColorCode').on('input change', function () {
            $('#ColorPicker').val('#' + this.value.toUpperCase());
        });

        // Is Custom toggle
        $('#ColorIsCustomToggle').on('change', function () {

            if (this.checked) {
                // Custom color → no picker
                $('#ColorPicker').prop('disabled', true);
                $('#ColorCode').val('');
                $('#ColorCode').prop('readonly', true);
                $('#ColorIsCustomLabel').text('Is Custom'); 
            } else { 
                // System color → enable picker
                $('#ColorCode').prop('readonly', false);
                $('#ColorPicker').prop('disabled', false);
                syncColorCode();
            }
        });

        function syncColorCode() {
            let color = $('#ColorPicker').val();
            $('#ColorCode').val(color ? color.toUpperCase().replace('#','') : '');
        }

        const toggle = document.getElementById("ColorStatusToggle");
        const hidden = document.getElementById("ColorStatusID");
        const label = document.getElementById("ColorStatusLabel");

        if (toggle && hidden && label) {
            toggle.addEventListener("change", function () {
                if (toggle.checked) {
                    label.textContent = "Active";
                    hidden.value = "A";
                } else {
                    label.textContent = "Inactive";
                    hidden.value = "I";
                }
            });
        }

        $('#btnSaveColor').on('click', function (e) {

            e.preventDefault();

            let requiredValidation = false;

            // Reset validation
            $('#ColorName').removeClass("border-danger");
            $('#ColorNameMessage').text('');
            $('#ColorCodeMessage').text('');
            $('#modalColorMessage').hide();

            // Spinner
            $('#btnSaveColorSpinner').removeClass('d-none');
            $('#btnSaveColor i').addClass('d-none');
            $('#btnSaveColor').prop('disabled', true);

            // Gather data (MATCH BACKEND)
            var data = {
                ID: $('#ColorID').val() || 0,
                Name: $('#ColorName').val().trim(),
                Code: $('#ColorIsCustomToggle').is(':checked')
                    ? null
                    : $('#ColorCode').val(),
                IsCustom: $('#ColorIsCustomToggle').is(':checked'),

                // ✅ THIS LINE IS REQUIRED
                StatusID: $('#ColorStatusToggle').is(':checked') ? 'A' : 'I'
            };
             
            // Validation
            if (!data.Name) {
                $('#ColorNameMessage').text("Name is required!");
                $('#ColorName').addClass("border-danger");
                requiredValidation = true;
            }
             
            if (!data.IsCustom && !data.Code) {
                $('#ColorCodeMessage').text("Color code is required!");
               
            }

            if (data.IsCustom === false){
             
                if ($('#ColorCode').val().trim() == "" || $('#ColorCode').val().trim().length != 6){
                        $("#ColorCodeMessage").text("Required and must must 6 digits")
                        requiredValidation = true; 
                }
            
            }
             
            if (requiredValidation) {
                $('#btnSaveColorSpinner').addClass('d-none');
                $('#btnSaveColor i').removeClass('d-none');
                $('#btnSaveColor').prop('disabled', false);
                return;
            }

            // AJAX
            $.ajax({
                url: '@Url.Action("SaveColor", "Colors")',
                type: 'POST',
                data: data,
                success: function (response) {

                    const table = $("#tableColors").DataTable();

                    if (response.exists) {
                        $('#ColorNameMessage').text(response.message);
                        $('#ColorName').addClass("border-danger");
                        toastr.warning(response.message);
                        return;
                    }

                    if (response.error) {
                        $('#modalColorMessage').text(response.message).show();
                        toastr.error(response.message);
                        return;
                    }

                    if (response.success) {
                        $('#saveColorModal').modal('hide');
                        table.ajax.reload(null, false);
                        toastr.success("Color saved successfully!");
                    } else {
                        $('#modalColorMessage')
                            .text("Unexpected response from server.")
                            .show();
                    }
                },
                error: function () {
                    $('#modalColorMessage')
                        .text("An error occurred while saving color.")
                        .show();
                    toastr.error("An error occurred while saving color.");
                },
                complete: function () {
                    $('#btnSaveColorSpinner').addClass('d-none');
                    $('#btnSaveColor i').removeClass('d-none');
                    $('#btnSaveColor').prop('disabled', false);
                }
            });
        });

        $('#ColorStatusToggle').on('change', function () {
            if (this.checked) {
                $('#ColorStatusLabel').text('Active');
                $('#ColorStatusID').val('A');
            } else {
                $('#ColorStatusLabel').text('Inactive');
                $('#ColorStatusID').val('I');
            }
        });
 
    });


</script>

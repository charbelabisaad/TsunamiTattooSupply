@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Roles";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">@ViewData["Title"]</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-6 d-flex align-items-center"><h3 class="card-title">Roles List</h3></div>
                        <div class="col-6 d-flex align-items-center justify-content-end">
                            <button id="btnNewRole" type="button" class="btn btn-sm btn-dark btn-black"><i class="fas fa-plus"></i> Add New Role</button>
                        </div>
                    </div>

                </div>

                <div class="card-body p-0">

                    <div class="col-sm-12 mt-3">
                        <table id="tableRoles" class="table table-striped w-100 ">
                            <thead>
                                <tr>
                                    <th>Description</th> 
                                    <th>Status</th>
                                    <th class="no-export">Actions</th>
                                </tr>
                            </thead>
                        </table>

                    </div>

                </div>

            </div>

        </div>
    </section>

</div>

@section Scripts {

    <script>
            $(document).ready(function () {

                var table = $('#tableRoles').DataTable({
                    processing: true,
                    responsive: true,
                    ajax: {
                        url: '@Url.Action("ListGetRoles", "Roles")',
                            type: 'GET',
                        dataSrc: function (json) {
                            // Handle backend error gracefully
                            if (json.success === false) {
                                toastr.error(json.message);
                                return [];
                            }
                            return json.data;
                        }
                    },
                    dom: '<"row mb-2"<"col-md-6"f><"col-md-6 text-right"B>>t<"row mt-2"<"col-md-6"l><"col-md-6 text-right"ip>>',
                    language: {
                        search: "",
                        searchPlaceholder: "Search users..."
                    },
                    buttons: [
                            { extend: 'copy', className: 'btn btn-secondary btn-sm', exportOptions: { columns: ':visible:not(.no-export)' }, text: '<i class="fas fa-copy"></i> Copy' },
                            { extend: 'excel', className: 'btn btn-success btn-sm', exportOptions: { columns: ':visible:not(.no-export)' }, text: '<i class="fas fa-file-excel"></i> Excel' },
                            { extend: 'pdf', className: 'btn btn-danger btn-sm', exportOptions: { columns: ':visible:not(.no-export)'}, text: '<i class="fas fa-file-pdf"></i> PDF'  },
                            { extend: 'print', className: 'btn btn-dark btn-sm', exportOptions: { columns: ':visible:not(.no-export)' }, text: '<i class="fas fa-print"></i> Print' },
                        { text: '<i class="fas fa-sync"></i> Refresh', className: 'btn btn-primary btn-sm',
                            action: function () {
                                table.ajax.reload();
                            }
                        }
                    ],
                    columns: [
                        { data: 'Description' }, 
                        { data: 'status',
                            render: function (data, type, row) {
                              let badgeClass = row.statusID === 'A' ? 'badge-success' : 'badge-danger';
                              return `<div class="badge text-center ${badgeClass}" style="width:100px">${data}</div>`;
                            }
                        },
                        {
                            data: null,
                            orderable: false,
                            searchable: false,
                            className: "no-export",
                            render: function (data, type, row) {
                                return `
                            <div class="dropdown">
                                <button class="btn btn-sm btn-light" type="button" data-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item btnEditRole" style="cursor:pointer" data-id="${row.id}" data-description="${row.description}" 
                                    data-statusid="${row.statusID}">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                        <a class="dropdown-item btnDeleteRole" style="cursor:pointer" data-id="${row.id}">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>   
                                </div>
                            </div>
                                `;
                            }
                        }
                    ]
                });

                // place export buttons next to search bar
                table.buttons().container().appendTo('#tableRoles_wrapper .col-md-6:eq(1)');

                var $filter = $('#tableRoles_filter');

                $filter.css("position", "relative");

                // Insert FA icons

                $filter.append('<i class="fas fa-times" id="clearSearch"></i>');

                // Toggle X on typing
                $('#tableRoles_filter input').on("input", function () {
                    if ($(this).val().length > 0) {
                        $('#clearSearch').show();
                    } else {
                        $('#clearSearch').hide();
                    }
                });

                // Clear on X click
                $('#clearSearch').on("click", function () {
                    $('#tableRoles_filter input').val('');
                    table.search('').draw();
                    $(this).hide();
                });

                const btnNewRole = document.getElementById("btnNewRole");

                btnNewRole.addEventListener("click", function () {

                    const modalEl = document.getElementById("saveRoleModal");
                    const modal = new bootstrap.Modal(modalEl);

                    $("#modalTitle").text('Create Role');

                    $("#RoleID").val(0);

                    $("#Description").val(''); 
                      
                    $("#StatusID").val('A');
                    $("#StatusToggle").prop("checked", true);

                    $("#DescriptionMessage").text(''); 

                    $("#Description").removeClass('border-danger');

                    $("#StatusToggle").prop("checked", true);

                    modal.show();

                    $(modalEl).on('shown.bs.modal', function () {

                        $("#Description").focus();

                    });

                });

                $(document).on('click', '.btnEditRole', function(){

                    $("#modalTitle").text('Modify Role');

                    const ID = $(this).data('id');
                    const Description = $(this).data('description'); 
                    const StatusID = $(this).data('statusid');
                    const modalEl = document.getElementById("saveRoleModal");
                    const modal = new bootstrap.Modal(modalEl);

                    $("#RoleID").val(ID);
                    $("#Description").val(Description); 
                    $("#StatusID").val(StatusID);

                    $("#DescriptionMessage").text(''); 

                    $("#Description").removeClass('border-danger'); 

                    $("#StatusToggle").prop("checked", StatusID == 'A' ? true : false);

                    modal.show();

                    $(modalEl).on('shown.bs.modal', function () {

                        $("#Description").focus();

                    });

                });

            // Show modal when Delete button clicked
            $(document).on("click", ".btnDeleteRole", function (e) {
              e.preventDefault();

              const userId = $(this).data("id");
                $("#deletedRoleId").val(userId);

              const username = $(this).closest("tr").find("td:first").text();

              $("#deleteRoleMessage").html(
                `Are you sure you want to delete <strong>${username}</strong>?`
              );

              $("#deleteRoleModal").modal("show");
            });

            
        });

    </script>
}










<div class="modal fade" id="saveRoleModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 id="modalRoleTitle" class="modal-title"></h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form id="roleForm" method="post">
                <div class="modal-body">
                    <div class="row">

                        <input id="RoleID" type="hidden" value="0" />
                         
                        <div class="col-md-12 mb-3">
                            <label for="RoleDescription" class="form-label">Description</label>
                            <input type="text" class="form-control" id="RoleDescription" placeholder="Fill Description" name="FirstName" />
                            <div id="RoleDescriptionMessage" class="text-danger fw-normal"></div>
                        </div>
    
                        <div class="col-md-12 mb-3">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" id="RoleStatusToggle" checked />
                                <label class="custom-control-label" for="RoleStatusToggle" id="RoleStatusLabel"></label>
                                <input type="hidden" id="RoleStatusID" name="RoleStatusID" value="A" />
                            </div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <div class="row w-100">
                        <!-- Validation/Error message -->
                        <div id="modalRoleMessage" class="col-md-7 d-flex align-items-center text-danger" style="display:none;">
                            <!-- message goes here -->
                        </div>

                        <!-- Buttons -->
                        <div class="col-md-5 d-flex align-items-center justify-content-end">
                            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">
                                <i class="fas fa-ban"></i> Cancel
                            </button>

                            <button id="btnSaveRole" type="button" class="btn btn-primary ml-2">
                                <span class="spinner-border spinner-border-sm d-none" id="btnSaveRoleSpinner" role="status" aria-hidden="true"></span>
                                <i class="fas fa-save"></i> Save
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    document.addEventListener("DOMContentLoaded", function () {

        const toggle = document.getElementById("RoleStatusToggle");
        const hidden = document.getElementById("RoleStatusID");
        const label = document.getElementById("RoleStatusLabel");

        if (toggle && hidden && label) {
            toggle.addEventListener("change", function () {
                if (toggle.checked) {
                    label.textContent = "Active";
                    hidden.value = "A";
                } else {
                    label.textContent = "Inactive";
                    hidden.value = "I";
                }
            });
        }

        $('#btnSaveRole').on('click', function (e) {

            e.preventDefault(); // ✅ prevent default form submission

            // Reset validation flag
            let requiredValidation = false;

            // Clear previous errors and borders
            $('#RoleDescription').removeClass("border-danger");
            $('#RoleDescriptionMessage').text('');

            // Show spinner while saving
            $('#btnSaveRoleSpinner').removeClass('d-none');
            $('#btnSaveRole i').addClass('d-none');

            // Gather form values
            var data = {
                ID: $('#RoleID').val() || 0,
                Description: $('#RoleDescription').val().trim(), 
                StatusID: $('#RoleStatusID').val()
            };

            // Basic validation
            if (!data.Description) {
                $('#RoleDescriptionMessage').text("RoleDescription is required!");
                $('#RoleDescription').addClass("border-danger");
                requiredValidation = true;
            }
              
            // Stop if validation failed
            if (requiredValidation) {
                $('#btnSaveRoleSpinner').addClass('d-none');
                $('#btnSaveRole i').removeClass('d-none');
                return;
            }

            // ✅ AJAX request
            $.ajax({
                url: '@Url.Action("SaveRole", "Roles")',
                type: 'POST',
                data: data,
                success: function (response) {

                    const table = $("#tableRoles").DataTable();

                    $('#btnSaveRoleSpinner').addClass('d-none');
                    $('#btnSaveRole i').removeClass('d-none');
                    $('#btnSaveRole').prop('disabled', true);

                    if (response.exists) {
                        $('#RoleDescriptionMessage').text(response.message || "Description already exists!");
                        $('#RoleDescription').addClass("border-danger");
                        toastr.warning(response.message || "Description already exists!");
                        $('#btnSaveRole').prop('disabled', false);
                        return;
                    }

                    if (response.error) {
                        $('#modalRoleMessage').text(response.message || "Error saving role.").show();
                        toastr.error(response.message || "Error saving role.");
                        $('#btnSaveRole').prop('disabled', false);
                        return;
                    }

                    if (response.roles) {
                        $('#saveRoleModal').modal('hide');
                        table.ajax.reload(null, false);
                        toastr.success("Role saved successfully!");
                    } else {
                        $('#modalRoleMessage').text("Unexpected response from server.").show();
                    }

                    $('#btnSaveRoleSpinner').addClass('d-none');
                    $('#btnSaveRole i').removeClass('d-none');
                    $('#btnSaveRole').prop('disabled', false);
                },
                error: function (xhr, status, error) {
                    $('#btnSaveRoleSpinner').addClass('d-none');
                    $('#btnSaveRole i').removeClass('d-none');
                    $('#btnSaveRole').prop('disabled', false);
                    $('#modalRoleMessage').text("An error occurred while saving role" ).show();
                    toastr.error("An error occurred while saving role."); // ✅ fixed missing parenthesis
                }
            });
        });

    });


</script>

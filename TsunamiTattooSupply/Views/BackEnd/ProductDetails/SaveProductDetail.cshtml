
<style>

    .color-only-picker {
        width: 38px;
        height: 38px;
        padding: 0;
        border: 1px solid #ced4da;
        border-radius: 4px;
        cursor: pointer;
        background: none;
    }

        /* Chrome, Edge, Safari */
        .color-only-picker::-webkit-color-swatch-wrapper {
            padding: 0;
        }

        .color-only-picker::-webkit-color-swatch {
            border: none;
            border-radius: 4px;
        }

        /* Firefox */
        .color-only-picker::-moz-color-swatch {
            border: none;
            border-radius: 4px;
        }

</style>
 
<div class="modal fade" id="saveProductDetailModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 id="modalProductDetailTitle" class="modal-title"></h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form id="ProductDetailForm" method="post">
                <div class="modal-body">

                    <div class="row align-items-center mb-3">
                        <input id="ProductDetailID" type="hidden" value="0" />

                        <!-- 🔹 Label -->
                        <div class="col-12 col-md-2 d-flex align-items-center">
                            <label for="ProductDetailDescription" class="form-label mb-0">Description</label>
                        </div>

                        <!-- 🔹 Input -->
                        <div class="col-12 col-md-12 d-flex align-items-center">
                            <div class="w-100">
                                <input type="text" class="form-control" id="ProductDetailDescription" placeholder="Fill Description" />
                                <div id="ProductDetailDescriptionMessage" class="text-danger fw-normal"></div>
                            </div>
                        </div>

                        <div class="col-12 col-md-12 d-flex align-items-center justify-content-md-end">

                            <div>

                                <div class="custom-control custom-switch align-block">
                                    <input type="checkbox" class="custom-control-input" id="ProductDetailShowFrontToggle" checked>
                                    <label class="custom-control-label" for="ProductDetailShowFrontToggle" id="ProductDetailShowFrontLabel">Show Front</label>
                                    <input type="hidden" id="ProductDetailShowFront" name="ProductDetailShowFront" value="1">
                                </div>

                                <div class="custom-control custom-switch m-0 align-block">
                                    <input type="checkbox" class="custom-control-input" id="ProductDetailStatusToggle" checked>
                                    <label class="custom-control-label" for="ProductDetailStatusToggle" id="ProductDetailStatusLabel">Active</label>
                                    <input type="hidden" id="ProductDetailStatusID" name="ProductDetailStatusID" value="A">
                                </div>

                            </div>

                        </div>

                    </div>

                </div>

                <div class="modal-footer">
                    <div class="row w-100">
                        <!-- Validation/Error message -->
                        <div id="modalProductDetailMessage" class="col-md-7 d-flex align-items-center text-danger" style="display:none;">
                            <!-- message goes here -->
                        </div>

                        <!-- Buttons -->
                        <div class="col-md-5 d-flex align-items-center justify-content-end">
                            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">
                                <i class="fas fa-ban"></i> Cancel
                            </button>

                            <button id="btnSaveProductDetail" type="button" class="btn btn-primary ml-2">
                                <span class="spinner-border spinner-border-sm d-none" id="btnSaveProductDetailSpinner" role="status" aria-hidden="true"></span>
                                <i class="fas fa-save"></i> Save
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    document.addEventListener("DOMContentLoaded", function () {

       // Init when modal opens
        $('#saveProductDetailModal').on('shown.bs.modal', function () {
            syncProductDetailCode();
        });

        // Picker → HEX
        $('#ProductDetailPicker').on('input change', function () {
            $('#ProductDetailCode').val(this.value.toUpperCase.replace('#',''));
        });

        $('#ProductDetailCode').on('input change', function () {
            $('#ProductDetailPicker').val('#' + this.value.toUpperCase());
        });


        const toggle = document.getElementById("ProductDetailStatusToggle");
        const hidden = document.getElementById("ProductDetailStatusID");
        const label = document.getElementById("ProductDetailStatusLabel");

        if (toggle && hidden && label) {
            toggle.addEventListener("change", function () {
                if (toggle.checked) {
                    label.textContent = "Active";
                    hidden.value = "A";
                } else {
                    label.textContent = "Inactive";
                    hidden.value = "I";
                }
            });
        }

        $('#btnSaveProductDetail').on('click', function (e) {

            e.preventDefault();

            let requiredValidation = false;

            // Reset validation
            $('#ProductDetailDescription').removeClass("border-danger");
            $('#ProductDetailDescriptionMessage').text('');
            $('#modalProductDetailMessage').hide();

            // Spinner
            $('#btnSaveProductDetailSpinner').removeClass('d-none');
            $('#btnSaveProductDetail i').addClass('d-none');
            $('#btnSaveProductDetail').prop('disabled', true);

            // Gather data (MATCH BACKEND)
            var data = {
                ID: $('#ProductDetailID').val() || 0,
                Description: $('#ProductDetailDescription').val().trim(),
                ShowFront: $('#ProductDetailShowFrontToggle').is(':checked'),
                StatusID: $('#ProductDetailStatusToggle').is(':checked') ? 'A' : 'I'
            };

            // Validation
            if (!data.Description) {
                $('#ProductDetailDescriptionMessage').text("Description is required!");
                $('#ProductDetailDescription').addClass("border-danger");
                requiredValidation = true;
            }
             
            if (data.IsCustom === false){

                if ($('#ProductDetailCode').val().trim() == "" || $('#ProductDetailCode').val().trim().length != 6){
                        $("#ProductDetailCodeMessage").text("Required and must must 6 digits")
                        requiredValidation = true;
                }

            }

            if (requiredValidation) {
                $('#btnSaveProductDetailSpinner').addClass('d-none');
                $('#btnSaveProductDetail i').removeClass('d-none');
                $('#btnSaveProductDetail').prop('disabled', false);
                return;
            }

            // AJAX
            $.ajax({
                url: '@Url.Action("SaveProductDetail", "ProductDetails")',
                type: 'POST',
                data: data,
                success: function (response) {

                    const table = $("#tableProductDetails").DataTable();

                    if (response.exists) {
                        $('#ProductDetailDescriptionMessage').text(response.message);
                        $('#ProductDetailDescription').addClass("border-danger");
                        toastr.warning(response.message);
                        return;
                    }

                    if (response.error) {
                        $('#modalProductDetailMessage').text(response.message).show();
                        toastr.error(response.message);
                        return;
                    }

                    if (response.success) {
                        $('#saveProductDetailModal').modal('hide');
                        table.ajax.reload(null, false);
                        toastr.success("ProductDetail saved successfully!");
                    } else {
                        $('#modalProductDetailMessage')
                            .text("Unexpected response from server.")
                            .show();
                    }
                },
                error: function () {
                    $('#modalProductDetailMessage')
                        .text("An error occurred while saving color.")
                        .show();
                    toastr.error("An error occurred while saving color.");
                },
                complete: function () {
                    $('#btnSaveProductDetailSpinner').addClass('d-none');
                    $('#btnSaveProductDetail i').removeClass('d-none');
                    $('#btnSaveProductDetail').prop('disabled', false);
                }
            });
        });

        $('#ProductDetailStatusToggle').on('change', function () {
            if (this.checked) {
                $('#ProductDetailStatusLabel').text('Active');
                $('#ProductDetailStatusID').val('A');
            } else {
                $('#ProductDetailStatusLabel').text('Inactive');
                $('#ProductDetailStatusID').val('I');
            }
        });

        $('#ProductDetailShowFrontToggle').on('change', function () {
          $('#ProductDetailShowFront').val(this.checked ? 1 : 0);
        });

    });


</script>

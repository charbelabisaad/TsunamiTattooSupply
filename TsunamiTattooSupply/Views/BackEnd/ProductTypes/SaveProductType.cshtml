
<style>

    .color-only-picker {
        width: 38px;
        height: 38px;
        padding: 0;
        border: 1px solid #ced4da;
        border-radius: 4px;
        cursor: pointer;
        background: none;
    }

        /* Chrome, Edge, Safari */
        .color-only-picker::-webkit-color-swatch-wrapper {
            padding: 0;
        }

        .color-only-picker::-webkit-color-swatch {
            border: none;
            border-radius: 4px;
        }

        /* Firefox */
        .color-only-picker::-moz-color-swatch {
            border: none;
            border-radius: 4px;
        }

</style>


<div class="modal fade" id="saveProductTypeModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 id="modalProductTypeTitle" class="modal-title"></h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form id="productTypeForm" method="post">
                <div class="modal-body">

                    <div class="row align-items-center mb-3">
                        <input id="ProductTypeID" type="hidden" value="0" />
                         
                        <!-- 🔹 Label -->
                        <div class="col-12 col-md-2 d-flex align-items-center">
                            <label for="ProductTypeDescription" class="form-label mb-0">Description</label>
                        </div>

                        <!-- 🔹 Input -->
                        <div class="col-12 col-md-12 d-flex align-items-center">
                            <div class="w-100">
                                <input type="text" class="form-control" id="ProductTypeDescription" placeholder="Fill Description" />
                                <div id="ProductTypeDescriptionMessage" class="text-danger fw-normal"></div>
                            </div>
                        </div>

                        <div class="col-12 col-md-12 d-flex align-items-center justify-content-md-end">

                            <div>

                                <div class="custom-control custom-switch align-block">
                                    <input type="checkbox" class="custom-control-input" id="ProductTypeShowFrontToggle" checked>
                                    <label class="custom-control-label" for="ProductTypeShowFrontToggle" id="ProductTypeShowFrontLabel">Show Front</label>
                                    <input type="hidden" id="ProductTypeShowFront" name="ProductTypeShowFront" value="1">
                                </div>
                                 
                                <div class="custom-control custom-switch m-0 align-block">
                                    <input type="checkbox" class="custom-control-input" id="ProductTypeStatusToggle" checked>
                                    <label class="custom-control-label" for="ProductTypeStatusToggle" id="ProductTypeStatusLabel">Active</label>
                                    <input type="hidden" id="ProductTypeStatusID" name="ProductTypeStatusID" value="A">
                                </div>

                            </div>

                        </div>
                         
                    </div>
                     
                </div>

                <div class="modal-footer">
                    <div class="row w-100">
                        <!-- Validation/Error message -->
                        <div id="modalProductTypeMessage" class="col-md-7 d-flex align-items-center text-danger" style="display:none;">
                            <!-- message goes here -->
                        </div>

                        <!-- Buttons -->
                        <div class="col-md-5 d-flex align-items-center justify-content-end">
                            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">
                                <i class="fas fa-ban"></i> Cancel
                            </button>

                            <button id="btnSaveProductType" type="button" class="btn btn-primary ml-2">
                                <span class="spinner-border spinner-border-sm d-none" id="btnSaveProductTypeSpinner" role="status" aria-hidden="true"></span>
                                <i class="fas fa-save"></i> Save
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    document.addEventListener("DOMContentLoaded", function () {

       // Init when modal opens
        $('#saveProductTypeModal').on('shown.bs.modal', function () {
            syncProductTypeCode();
        });

        // Picker → HEX
        $('#ProductTypePicker').on('input change', function () {
            $('#ProductTypeCode').val(this.value.toUpperCase.replace('#',''));
        });

        $('#ProductTypeCode').on('input change', function () {
            $('#ProductTypePicker').val('#' + this.value.toUpperCase());
        });
     
       
        const toggle = document.getElementById("ProductTypeStatusToggle");
        const hidden = document.getElementById("ProductTypeStatusID");
        const label = document.getElementById("ProductTypeStatusLabel");

        if (toggle && hidden && label) {
            toggle.addEventListener("change", function () {
                if (toggle.checked) {
                    label.textContent = "Active";
                    hidden.value = "A";
                } else {
                    label.textContent = "Inactive";
                    hidden.value = "I";
                }
            });
        }

        $('#btnSaveProductType').on('click', function (e) {

            e.preventDefault();

            let requiredValidation = false;

            // Reset validation
            $('#ProductTypeDescription').removeClass("border-danger");
            $('#ProductTypeDescriptionMessage').text(''); 
            $('#modalProductTypeMessage').hide();

            // Spinner
            $('#btnSaveProductTypeSpinner').removeClass('d-none');
            $('#btnSaveProductType i').addClass('d-none');
            $('#btnSaveProductType').prop('disabled', true);

            // Gather data (MATCH BACKEND)
            var data = {
                ID: $('#ProductTypeID').val() || 0,
                Description: $('#ProductTypeDescription').val().trim(), 
                ShowFront: $('#ProductTypeShowFrontToggle').is(':checked'), 
                StatusID: $('#ProductTypeStatusToggle').is(':checked') ? 'A' : 'I'
            };

            // Validation
            if (!data.Description) {
                $('#ProductTypeDescriptionMessage').text("Description is required!");
                $('#ProductTypeDescription').addClass("border-danger");
                requiredValidation = true;
            }
             
            if (data.IsCustom === false){

                if ($('#ProductTypeCode').val().trim() == "" || $('#ProductTypeCode').val().trim().length != 6){
                        $("#ProductTypeCodeMessage").text("Required and must must 6 digits")
                        requiredValidation = true;
                }

            }

            if (requiredValidation) {
                $('#btnSaveProductTypeSpinner').addClass('d-none');
                $('#btnSaveProductType i').removeClass('d-none');
                $('#btnSaveProductType').prop('disabled', false);
                return;
            }

            // AJAX
            $.ajax({
                url: '@Url.Action("SaveProductType", "ProductTypes")',
                type: 'POST',
                data: data,
                success: function (response) {

                    const table = $("#tableProductTypes").DataTable();

                    if (response.exists) {
                        $('#ProductTypeDescriptionMessage').text(response.message);
                        $('#ProductTypeDescription').addClass("border-danger");
                        toastr.warning(response.message);
                        return;
                    }

                    if (response.error) {
                        $('#modalProductTypeMessage').text(response.message).show();
                        toastr.error(response.message);
                        return;
                    }

                    if (response.success) {
                        $('#saveProductTypeModal').modal('hide');
                        table.ajax.reload(null, false);
                        toastr.success("ProductType saved successfully!");
                    } else {
                        $('#modalProductTypeMessage')
                            .text("Unexpected response from server.")
                            .show();
                    }
                },
                error: function () {
                    $('#modalProductTypeMessage')
                        .text("An error occurred while saving color.")
                        .show();
                    toastr.error("An error occurred while saving color.");
                },
                complete: function () {
                    $('#btnSaveProductTypeSpinner').addClass('d-none');
                    $('#btnSaveProductType i').removeClass('d-none');
                    $('#btnSaveProductType').prop('disabled', false);
                }
            });
        });

        $('#ProductTypeStatusToggle').on('change', function () {
            if (this.checked) {
                $('#ProductTypeStatusLabel').text('Active');
                $('#ProductTypeStatusID').val('A');
            } else {
                $('#ProductTypeStatusLabel').text('Inactive');
                $('#ProductTypeStatusID').val('I');
            }
        });

        $('#ProductTypeShowFrontToggle').on('change', function () {
          $('#ProductTypeShowFront').val(this.checked ? 1 : 0);
        });

    });


</script>

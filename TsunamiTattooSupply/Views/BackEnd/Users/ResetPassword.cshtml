<div class="modal fade" id="resetPasswordModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">

            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">Reset Password</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form method="post">
                <div class="modal-body">
                    <p class="mb-3" id="resetPasswordMessage">
                        Are you sure you want to reset this user’s password?
                    </p>
                    <input type="hidden" id="resetPasswordUserId" value="0" />
                </div>

                <div class="modal-footer">
                    <div class="row w-100">
                        <div id="resetModalMessage" class="col-md-6 d-flex align-items-center text-danger" style="display:none;"></div>

                        <div class="col-md-6 d-flex align-items-center justify-content-end">
                            <button type="button" class="btn btn-secondary me-2" style="width:100px !important" data-bs-dismiss="modal">
                                <i class="fas fa-ban"></i> Cancel
                            </button>
                            <button id="btnConfirmResetPassword" type="button" class="btn btn-warning text-white ml-1" style="width:130px!important">
                                <span class="spinner-border spinner-border-sm d-none" id="btnResetSpinner" role="status" aria-hidden="true"></span>
                                <i class="fas fa-redo"></i> Reset
                            </button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

<script>


    document.addEventListener("DOMContentLoaded", function () {
    // Confirm Reset Password
    $("#btnConfirmResetPassword").on("click", function () {
        const userId = $("#resetPasswordUserId").val();
         
        $("#btnResetSpinner").removeClass("d-none");
        $("#btnConfirmResetPassword i").addClass("d-none");
        $("#btnConfirmResetPassword").prop("disabled", true)

        $.ajax({
            url: '@Url.Action("ResetPassword","Users")', // adjust controller path if needed
            type: 'POST',
            data: { id: userId },
            success: function (response) {
                if (response.success) {
                    toastr.success('Password reset successfully.');
                    $("#resetPasswordModal").modal('hide');
                } else {
                    toastr.error(response.message || 'Error resetting password.');
                }
                $("#btnResetSpinner").addClass("d-none");
                $("#btnConfirmResetPassword i").removeClass("d-none");
                $("#btnConfirmResetPassword").prop("disabled", false);
            },
            error: function () {
                toastr.error('An unexpected error occurred.');
                $("#btnResetSpinner").addClass("d-none");
                $("#btnConfirmPassword i").removeClass("d-none");
                $("#btnResetSpinner").prop("disabled", false);
            }
        });
    });


    });

</script>
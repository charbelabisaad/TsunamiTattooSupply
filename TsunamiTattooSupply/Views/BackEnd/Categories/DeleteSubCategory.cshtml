<!-- 🔹 Delete Sub Category Modal (Bootstrap 4) -->
<div class="modal fade" id="deleteSubCategoryModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">

            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Delete Sub Category</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <p id="deleteSubCategoryMessage">
                    Are you sure you want to delete this Sub Category?
                </p>
                <input type="hidden" id="deletedSubCategoryId" value="0" />
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" style="width:100px;" data-dismiss="modal">
                    <i class="fas fa-ban"></i> Cancel
                </button>

                <button id="btnConfirmDeleteSubCategory" type="button" class="btn btn-danger" style="width:100px;">
                    <span id="btnDeleteSpinner" class="spinner-border spinner-border-sm d-none"></span>
                    <i class="fas fa-trash"></i> Delete
                </button>
            </div>

        </div>
    </div>
</div>

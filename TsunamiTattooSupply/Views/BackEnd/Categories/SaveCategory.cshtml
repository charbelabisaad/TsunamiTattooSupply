<script>

    document.addEventListener("DOMContentLoaded", function () {
         
            const toggle = document.getElementById("CategoryStatusToggle");
            const hidden = document.getElementById("CategoryStatusID");
            const label = document.getElementById("CategoryStatusLabel");
              
            if (toggle && hidden) {
                toggle.addEventListener("change", function () {
                    if (toggle.checked) {
                        label.textContent = "Active";
                        hidden.value = "A";
                    } else {
                        label.textContent = "Inactive";
                        hidden.value = "I";
                    }
                });
            }

    $('#btnSaveCategory').on('click', function (e) {
        e.preventDefault();

        $('#btnSaveCategorySpinner').removeClass('d-none');
        $('#btnSaveCategory i').addClass('d-none');
        $('#btnSaveCategory').prop('disabled', true);

        $('#CategoryDescription').removeClass("border-danger");
        $('#CategoryDescriptionMessage').text('');

        let description = $('#CategoryDescription').val().trim();
        if (!description) {
            $('#CategoryDescriptionMessage').text("Description is required!");
            $('#CategoryDescription').addClass("border-danger");
            $('#btnSaveCategorySpinner').addClass('d-none');
            $('#btnSaveCategory i').removeClass('d-none');
            $('#btnSaveCategory').prop('disabled', false);
            return;
        }

        let formData = new FormData();
        formData.append("ID", $('#CategoryID').val() || 0);
        formData.append("Description", description);
        formData.append("StatusID", $('#CategoryStatusID').val());
        formData.append("Details", $('#categoryDetails').summernote('code'));

        // Append image files (if any)
        const appendFile = (id, name) => {
            let fileInput = document.getElementById(id);
            if (fileInput && fileInput.files.length > 0) {
                formData.append(name, fileInput.files[0]);
            }
        };

        appendFile("categoryWebImage", "WebImage");
        appendFile("categoryBannerImage", "BannerImage");
        appendFile("categoryAdsImage1", "AD_Image1");
        appendFile("categoryAdsImage2", "AD_Image2");
        appendFile("categoryAdsImage3", "AD_Image3");
        appendFile("categoryMobileImage", "MobileImage");

        $.ajax({
            url: '@Url.Action("SaveCategory", "Categories")',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (response) {
                const table = $("#tableCategories").DataTable();

                if (response.exists) {
                    toastr.warning(response.message || "Category already exists!");
                    return;
                }

                if (response.error) {
                    toastr.error(response.message || "Error saving category.");
                    return;
                }

                if (response.categories) {
                    $('#saveCategoryModal').modal('hide');
                    table.ajax.reload(null, false);
                    toastr.success("Category saved successfully!");
                } else {
                    toastr.error("Unexpected response from server.");
                }

                $('#btnSaveCategorySpinner').addClass('d-none');
                $('#btnSaveCategory i').removeClass('d-none');
                $('#btnSaveCategory').prop('disabled', false);

            },
            error: function () {
                toastr.error("An error occurred while saving category.");
                $('#btnSaveCategorySpinner').addClass('d-none');
                $('#btnSaveCategory i').removeClass('d-none');
                $('#btnSaveCategory').prop('disabled', false);
            }
        });
    });

         
        document.querySelectorAll('.image-box-wrapper').forEach(wrapper => {

            const input = wrapper.querySelector('input[type="file"]');
            const preview = wrapper.querySelector('img');
            const placeholder = wrapper.querySelector('.placeholder-icon');
            const clearBtn = wrapper.querySelector('.btn-clear');
            const viewBtn = wrapper.querySelector('.btn-view');
            const browseBtn = wrapper.querySelector('.btn-browse');

            // Initialize buttons hidden
            clearBtn.style.display = 'none';
            viewBtn.style.display = 'none';

            input.addEventListener('change', function () {
                const file = this.files[0];
                if (!file) return;

                const reader = new FileReader();
                reader.onload = e => {
                    preview.src = e.target.result;
                    preview.classList.remove('d-none');
                    placeholder.classList.add('d-none');

                    // Show buttons only if image is loaded
                    clearBtn.style.display = 'inline-block';
                    viewBtn.style.display = 'inline-block';
                };
                reader.readAsDataURL(file);
            });

            clearBtn.addEventListener('click', () => {
                preview.src = '';
                preview.classList.add('d-none');
                placeholder.classList.remove('d-none');
                input.value = '';

                // Hide Clear and View buttons again
                clearBtn.style.display = 'none';
                viewBtn.style.display = 'none';
            });

            viewBtn.addEventListener('click', () => {
                if (!preview.src) return;
                const modalImg = document.getElementById('imageViewModalImg');
                modalImg.src = preview.src;
                new bootstrap.Modal(document.getElementById('imageViewModal')).show();
            });

            browseBtn.addEventListener('click', () => input.click());

        }); 
    
        $(function(){


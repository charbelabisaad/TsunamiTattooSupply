<input type="hidden" id="ClearADImage2" name="ClearADImage2" value="false" />
<input type="hidden" id="ClearADImage3" name="ClearADImage3" value="false" />

<script>
    document.addEventListener("DOMContentLoaded", function () {

        // ========================
        // 🔹 Status Toggle Handler
        // ========================
        const toggle = document.getElementById("CategoryStatusToggle");
        const hidden = document.getElementById("CategoryStatusID");
        const label = document.getElementById("CategoryStatusLabel");

        if (toggle && hidden) {
            toggle.addEventListener("change", function () {
                if (toggle.checked) {
                    label.textContent = "Active";
                    hidden.value = "A";
                } else {
                    label.textContent = "Inactive";
                    hidden.value = "I";
                }
            });
        }

        // ===============================
        // 🔹 Save Button (AJAX Submission)
        // ===============================
        $('#btnSaveCategory').on('click', function (e) {

            e.preventDefault();

            // Reset error area
            $("#dErrorHandling").addClass("d-none").text("");

            // Start loading state
            $('#btnSaveCategorySpinner').removeClass('d-none');
            $('#btnSaveCategory i').addClass('d-none');
            $('#btnSaveCategory').prop('disabled', true);

            // Reset field validation
            $('#CategoryDescription').removeClass("border-danger");
            $('#CategoryDescriptionMessage').text('');

            let description = $('#CategoryDescription').val().trim();

            if (!description) {
                $('#CategoryDescriptionMessage').text("Description is required!");
                $('#CategoryDescription').addClass("border-danger");
                resetButtonState();
                return;
            }

            // Build form data
            let formData = new FormData();
            formData.append("ID", $('#CategoryID').val() || 0);
            formData.append("Description", description);
            formData.append("StatusID", $('#CategoryStatusID').val());

            // Handle Summernote safely
            let details = $('#categoryDetails').summernote ? $('#categoryDetails').summernote('code') : '';
            formData.append("Details", details || '');

            // Append files only if browsed
            const appendFile = (inputId, fieldName) => {
                const input = document.getElementById(inputId);
                if (input && input.files.length > 0) {
                    formData.append(fieldName, input.files[0]);
                }
            };
            appendFile("categoryWebImage", "WebImage");
            appendFile("categoryBannerImage", "BannerImage");
            appendFile("categoryAdsImage1", "AD_Image1");
            appendFile("categoryAdsImage2", "AD_Image2");
            appendFile("categoryAdsImage3", "AD_Image3");
            appendFile("categoryMobileImage", "MobileImage");

            // Append clear-image flags
            formData.append("ClearWebImage", $("#ClearWebImage").val() || "false");
            formData.append("ClearBannerImage", $("#ClearBannerImage").val() || "false");
            formData.append("ClearMobileImage", $("#ClearMobileImage").val() || "false");
            formData.append("ClearADImage1", $("#ClearADImage1").val() || "false");
            formData.append("ClearADImage2", $("#ClearADImage2").val() || "false");
            formData.append("ClearADImage3", $("#ClearADImage3").val() || "false");

            // Send AJAX
            $.ajax({
                url: '@Url.Action("SaveCategory", "Categories")',
                type: 'POST',
                data: formData,
                processData: false, 
                contentType: false,
                success: function (response) {
                    const table = $.fn.DataTable.isDataTable("#tableCategories")
                        ? $("#tableCategories").DataTable()
                        : null;

                    if (response.exists) {
                        toastr.warning(response.message || "Category already exists!");
                        resetButtonState();
                        return;
                    }

                    if (response.error) {
                        toastr.error(response.message || "Error saving category.");
                        resetButtonState();
                        return;
                    }

                    if (response.category) {
                        $('#saveCategoryModal').modal('hide');
                        if (table) table.ajax.reload(null, false);
                        toastr.success(response.message || "Category saved successfully!");

                        // Reset clear flags + file inputs
                        $("#ClearWebImage, #ClearBannerImage, #ClearMobileImage, #ClearADImage1, #ClearADImage2, #ClearADImage3").val("false");
                        $("#saveCategoryModal input[type='file']").val('');
                        $(".image-box-wrapper img").attr("src", "").addClass("d-none");
                        $(".image-box-wrapper .placeholder-icon").removeClass("d-none");
                        $(".image-box-wrapper .btn-clear, .image-box-wrapper .btn-view").hide();
                    } else {
                        toastr.error("Unexpected response from server.");
                    }

                    resetButtonState();
                },
                error: function (xhr) {
                    toastr.error("An error occurred while saving category.");
                    $("#dErrorHandling").removeClass("d-none").text(xhr.responseText || "Server error.");
                    resetButtonState();
                }
            });

            // Helper: reset spinner + button
            function resetButtonState() {
                $('#btnSaveCategorySpinner').addClass('d-none');
                $('#btnSaveCategory i').removeClass('d-none');
                $('#btnSaveCategory').prop('disabled', false);
            }
        });

        // ===========================================
        // 🔹 Image Upload / Preview / Clear / View Logic
        // ===========================================
        document.querySelectorAll('.image-box-wrapper').forEach(wrapper => {

            const input = wrapper.querySelector('input[type="file"]');
            const preview = wrapper.querySelector('img');
            const placeholder = wrapper.querySelector('.placeholder-icon');
            const clearBtn = wrapper.querySelector('.btn-clear');
            const viewBtn = wrapper.querySelector('.btn-view');
            const browseBtn = wrapper.querySelector('.btn-browse');

            // Hide buttons initially
            clearBtn.style.display = 'none';
            viewBtn.style.display = 'none';

            // When file is chosen
            input.addEventListener('change', function () {

                const file = this.files[0];
                if (!file) return;

                if (!validateCategoryImageSize(file)) {
                    input.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = e => {
                    preview.src = e.target.result;
                    preview.classList.remove('d-none');
                    placeholder.classList.add('d-none');
                    clearBtn.style.display = 'inline-block';
                    viewBtn.style.display = 'inline-block';
                    resetClearFlag(wrapper);
                };
                reader.readAsDataURL(file);
            });

            // When Clear clicked
            clearBtn.addEventListener('click', () => {
                preview.src = '';
                preview.classList.add('d-none');
                placeholder.classList.remove('d-none');
                input.value = '';
                clearBtn.style.display = 'none';
                viewBtn.style.display = 'none';
                setClearFlag(wrapper);
            });

            // When View clicked
              viewBtn.addEventListener('click', () => {
                    if (!preview.src) return;
                    const modalImg = document.getElementById('imageCategoryViewModalImg');
                    modalImg.src = preview.src;
                    new bootstrap.Modal(document.getElementById('imageCategoryViewModal')).show();
            });

            // Browse button click triggers input
            browseBtn.addEventListener('click', () => input.click());

            // Helper: set clear flag
               function setClearFlag(wrapper) {
                    if (wrapper.querySelector("#categoryWebImagePreview")) $("#ClearWebImage").val("true");
                    if (wrapper.querySelector("#categoryMobileImagePreview")) $("#ClearMobileImage").val("true");
                    if (wrapper.querySelector("#categoryBannerImagePreview")) $("#ClearBannerImage").val("true");
                    if (wrapper.querySelector("#categoryAds1Preview")) $("#ClearADImage1").val("true");
                    if (wrapper.querySelector("#categoryAds2Preview")) $("#ClearADImage2").val("true");
                    if (wrapper.querySelector("#categoryAds3Preview")) $("#ClearADImage3").val("true");
                }

                function resetClearFlag(wrapper) {
                    if (wrapper.querySelector("#categoryWebImagePreview")) $("#ClearWebImage").val("false");
                    if (wrapper.querySelector("#categoryMobileImagePreview")) $("#ClearMobileImage").val("false");
                    if (wrapper.querySelector("#categoryBannerImagePreview")) $("#ClearBannerImage").val("false");
                    if (wrapper.querySelector("#categoryAds1Preview")) $("#ClearADImage1").val("false");
                    if (wrapper.querySelector("#categoryAds2Preview")) $("#ClearADImage2").val("false");
                    if (wrapper.querySelector("#categoryAds3Preview")) $("#ClearADImage3").val("false");
                }
        });

        // =============================
        // 🔹 Reset Clear Flags on Close
        // =============================
        $('#saveCategoryModal').on('hidden.bs.modal', function () {
            $("#ClearWebImage, #ClearBannerImage, #ClearMobileImage, #ClearADImage1, #ClearADImage2, #ClearADImage3").val("false");
        });
 
        // =======================
        // 🔹 Summernote Setup
        // =======================
       
        $('#categoryDetails').summernote({
        
            height:200,
            minHeight:200,
            placeholder: 'Write details here...'
        
        });

        function validateCategoryImageSize(file) {

        if (!file) return true;

        const maxSize = 60 * 1024;

        if (file.size > maxSize) {

            if (typeof toastr !== "undefined") {
                toastr.error("Image size must not exceed 60 KB");
            } else {
                alert("Image size must not exceed 60 KB");
            }

            return false;
        }

        return true;
    }


    });
</script>

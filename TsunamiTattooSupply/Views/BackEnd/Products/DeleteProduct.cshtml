<div class="modal fade" id="deleteItemModal" tabindex="-1" item="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">

            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Delete Item</h5>
                <button type="button" class="close text-white" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form method="post">
                <div class="modal-body">
                    <p class="mb-3" id="deleteItemMessage">
                        Are you sure you want to delete this Item?
                    </p>
                    <input type="hidden" id="deletedItemId" value="0" />
                </div>

                <div class="modal-footer">
                    <div class="row w-100">
                        <div id="deleteModalMessage" class="col-md-6 d-flex align-items-center text-danger" style="display:none;"></div>

                        <div class="col-md-6 d-flex align-items-center justify-content-end">
                            <button type="button" class="btn btn-secondary me-2" style="width:100px !important" data-bs-dismiss="modal">
                                <i class="fas fa-ban"></i> Cancel
                            </button>
                            <button id="btnConfirmDeleteItem" type="button" class="btn btn-danger ml-1" style="width:100px!important">
                                <span class="spinner-border spinner-border-sm d-none" id="btnDeleteSpinner" item="status" aria-hidden="true"></span>
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
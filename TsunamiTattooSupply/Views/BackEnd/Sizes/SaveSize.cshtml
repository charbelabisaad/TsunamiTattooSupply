

<div class="modal fade" id="saveSizeModal" tabindex="-1" size="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" size="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 id="modalSizeTitle" class="modal-title"></h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form id="sizeForm" method="post">
                <div class="modal-body">
                    <div class="row align-items-center mb-3">
                        <input id="SizeID" type="hidden" value="0" />

                        <!-- 🔹 Label -->
                        <div class="col-12 col-md-2 d-flex align-items-center">
                            <label for="SizeDescription" class="form-label mb-0">Description</label>
                        </div>

                        <!-- 🔹 Input -->
                        <div class="col-12 col-md-8 d-flex align-items-center">
                            <div class="w-100">
                                <input type="text" class="form-control" id="SizeDescription" placeholder="Fill Description" />
                                <div id="SizeDescriptionMessage" class="text-danger fw-normal"></div>
                            </div>
                        </div>

                        <!-- 🔹 Status Toggle -->
                        <div class="col-12 col-md-2 d-flex align-items-center justify-content-md-end">
                            <div class="custom-control custom-switch m-0">
                                <input type="checkbox" class="custom-control-input" id="SizeStatusToggle" checked>
                                <label class="custom-control-label" for="SizeStatusToggle" id="SizeStatusLabel">Active</label>
                                <input type="hidden" id="SizeStatusID" name="SizeStatusID" value="A">
                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <div class="row w-100">
                        <!-- Validation/Error message -->
                        <div id="modalSizeMessage" class="col-md-7 d-flex align-items-center text-danger" style="display:none;">
                            <!-- message goes here -->
                        </div>

                        <!-- Buttons -->
                        <div class="col-md-5 d-flex align-items-center justify-content-end">
                            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">
                                <i class="fas fa-ban"></i> Cancel
                            </button>

                            <button id="btnSaveSize" type="button" class="btn btn-primary ml-2">
                                <span class="spinner-border spinner-border-sm d-none" id="btnSaveSizeSpinner" size="status" aria-hidden="true"></span>
                                <i class="fas fa-save"></i> Save
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    document.addEventListener("DOMContentLoaded", function () {

        const toggle = document.getElementById("SizeStatusToggle");
        const hidden = document.getElementById("SizeStatusID");
        const label = document.getElementById("SizeStatusLabel");

        if (toggle && hidden && label) {
            toggle.addEventListener("change", function () {
                if (toggle.checked) {
                    label.textContent = "Active";
                    hidden.value = "A";
                } else {
                    label.textContent = "Inactive";
                    hidden.value = "I";
                }
            });
        }

        $('#btnSaveSize').on('click', function (e) {

            e.preventDefault(); // ✅ prevent default form submission

            // Reset validation flag
            let requiredValidation = false;

            // Clear previous errors and borders
            $('#SizeDescription').removeClass("border-danger");
            $('#SizeDescriptionMessage').text('');

            // Show spinner while saving
            $('#btnSaveSizeSpinner').removeClass('d-none');
            $('#btnSaveSize i').addClass('d-none');

            // Gather form values
            var data = {
                ID: $('#SizeID').val() || 0,
                Description: $('#SizeDescription').val().trim(),
                StatusID: $('#SizeStatusID').val()
            };

            // Basic validation
            if (!data.Description) {
                $('#SizeDescriptionMessage').text("Description is required!");
                $('#SizeDescription').addClass("border-danger");
                requiredValidation = true;
            }

            // Stop if validation failed
            if (requiredValidation) {
                $('#btnSaveSizeSpinner').addClass('d-none');
                $('#btnSaveSize i').removeClass('d-none');
                return;
            }

            // ✅ AJAX request
            $.ajax({
                url: '@Url.Action("SaveSize", "Sizes")',
                type: 'POST',
                data: data,
                success: function (response) {

                    const table = $("#tableSizes").DataTable();

                    $('#btnSaveSizeSpinner').addClass('d-none');
                    $('#btnSaveSize i').removeClass('d-none');
                    $('#btnSaveSize').prop('disabled', true);

                    if (response.exists) {
                        $('#SizeDescriptionMessage').text(response.message || "Description already exists!");
                        $('#SizeDescription').addClass("border-danger");
                        toastr.warning(response.message || "Description already exists!");
                        $('#btnSaveSize').prop('disabled', false);
                        return;
                    }

                    if (response.error) {
                        $('#modalSizeMessage').text(response.message || "Error saving size.").show();
                        toastr.error(response.message || "Error saving size.");
                        $('#btnSaveSize').prop('disabled', false);
                        return;
                    }

                    if (response.sizes) {
                        $('#saveSizeModal').modal('hide');
                        table.ajax.reload(null, false);
                        toastr.success("Size saved successfully!");
                    } else {
                        $('#modalSizeMessage').text("Unexpected response from server.").show();
                    }

                    $('#btnSaveSizeSpinner').addClass('d-none');
                    $('#btnSaveSize i').removeClass('d-none');
                    $('#btnSaveSize').prop('disabled', false);
                },
                error: function (xhr, status, error) {
                    $('#btnSaveSizeSpinner').addClass('d-none');
                    $('#btnSaveSize i').removeClass('d-none');
                    $('#btnSaveSize').prop('disabled', false);
                    $('#modalSizeMessage').text("An error occurred while saving size" ).show();
                    toastr.error("An error occurred while saving size."); // ✅ fixed missing parenthesis
                }
            });
        });

    });


</script>

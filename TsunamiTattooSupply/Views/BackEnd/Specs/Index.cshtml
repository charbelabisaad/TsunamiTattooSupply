@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Sepcs";
}

<partial name="SaveSpec" />
<partial name="DeleteSpec" />

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">@ViewData["Title"]</h1>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-6 d-flex align-items-center"><h3 class="card-title">Specs List</h3></div>
                        <div class="col-6 d-flex align-items-center justify-content-end">
                            <button id="btnNewSpec" type="button" class="btn btn-sm btn-black"><i class="fas fa-plus"></i> Add New Spec</button>
                        </div>
                    </div>

                </div>

                <div class="card-body p-0">

                    <div class="col-sm-12 mt-3">
                        <table id="tableSpecs" class="table table-striped w-100 ">
                            <thead>
                                <tr>
                                    <th>Description</th> 
                                    <th>Sub Category</th>
                                    <th style="width:50px">Status</th>
									<th class="no-export" style="width:50px">Actions</th>
                                </tr>
                            </thead>
                        </table>

                    </div>

                </div>

            </div>

        </div>
    </section>

</div>

@section Scripts {

    <script>
            $(document).ready(function () {

                var table = $('#tableSpecs').DataTable({
                    processing: true,
                    responsive: true,
                    ajax: {
                        url: '@Url.Action("ListGetSpecs", "Specs")',
                            type: 'GET',
                        dataSrc: function (json) {
                        if (json && json.success === false) {
                            toastr.error(json.message || "Failed to load specs.");
                            return [];
                        }
                        if (!json || !json.data) {
                            toastr.error("Unexpected response from server.");
                            return [];
                        }
                        return json.data;
                    }
                    },
                    dom: '<"row mb-2"<"col-md-6"f><"col-md-6 text-right"B>>t<"row mt-2"<"col-md-6"l><"col-md-6 text-right"ip>>',
                    language: {
                        search: "",
                        searchPlaceholder: "Search specs..."
                    },
                    buttons: [
                            { extend: 'copy', className: 'btn btn-secondary btn-sm', exportOptions: { columns: ':visible:not(.no-export)' }, text: '<i class="fas fa-copy"></i> Copy' },
                            { extend: 'excel', className: 'btn btn-success btn-sm', exportOptions: { columns: ':visible:not(.no-export)' }, text: '<i class="fas fa-file-excel"></i> Excel' },
                            {
                                extend: 'pdfHtml5',
                                className: 'btn btn-danger btn-sm',
                                exportOptions: { columns: ':visible:not(.no-export)' },
                                text: '<i class="fas fa-file-pdf"></i> PDF',
                                customize: function (doc) {
                                    // Set all columns to auto width
                                    var tableBody = doc.content[1].table.body;
                                    var colCount = tableBody[0].length;

                                    // Distribute column widths evenly (100% width)
                                    var colWidths = [];
                                    for (var i = 0; i < colCount; i++) {
                                        colWidths.push('*');
                                    }
                                    doc.content[1].table.widths = colWidths;

                                    // Optional: reduce margins and font size to fit better
                                    doc.styles.tableBodyEven.alignment = 'center';
                                    doc.styles.tableBodyOdd.alignment = 'center';
                                    doc.styles.tableHeader.alignment = 'center';
                                    doc.defaultStyle.fontSize = 8;
                                    doc.pageMargins = [10, 10, 10, 10];
                                }
                            },
                            { extend: 'print', className: 'btn btn-dark btn-sm', exportOptions: { columns: ':visible:not(.no-export)' }, text: '<i class="fas fa-print"></i> Print' },
                        { text: '<i class="fas fa-sync"></i> Refresh', className: 'btn btn-primary btn-sm',
                            action: function () {
                                table.ajax.reload();
                            }
                        }
                    ],
                    columns: [
                        { 
                            data: 'description',
                            className: 'align-middle'
                        },
                        {
                            data: 'subCategoryDescription',
                            className: 'align-middle'
                        },
                        { data: 'statusDescription',
                            className: 'align-middle text-center',
                            render: function (data, type, row) { 
                              return `<div class="badge text-center text-white" style="background-color:#${row.statusColor}; width:100px">${data}</div>`;
                            }
                        },
                        {
                            data: null,
                            orderable: false,
                            searchable: false,
                            className: "no-export align-middle text-center",
                            render: function (data, type, row) {
                                return `
                            <div class="dropdown">
                                <button class="btn btn-sm btn-light" type="button" data-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item btnEditSpec" style="cursor:pointer" data-id="${row.id}" data-description="${row.description}" 
                                    data-statusid="${row.statusID}"
                                    data-subcategoryid="${row.subCategoryID}">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                        <a class="dropdown-item btnDeleteSpec" style="cursor:pointer" data-id="${row.id}">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>   
                                </div>
                            </div>
                                `;
                            }
                        }
                    ]
                });
                 
                var $filter = $('#tableSpecs_filter');

                $filter.css("position", "relative");
 

                const btnNewSpec = document.getElementById("btnNewSpec");

                btnNewSpec.addEventListener("click", function () {

                    const modalEl = document.getElementById("saveSpecModal");
                    const modal = new bootstrap.Modal(modalEl);

                    $("#modalSpecTitle").text('Create New Spec');

                    $("#SpecID").val(0);

                    $("#SpecDescription").val('');
                    $("#SpecSubCategory").prop("selectedIndex", 0);
                      
                    $("#SpecStatusID").val('A');
                    $("#SpecStatusToggle").prop("checked", true);
                    $("#SpecStatusLabel").text("Active");

                    $("#SpecDescriptionMessage").text(''); 

                    $("#SpecDescription").removeClass('border-danger');
                     
                    modal.show();

                    $(modalEl).on('shown.bs.modal', function () {

                        $("#SpecDescription").focus();

                    });

                });

                $(document).on('click', '.btnEditSpec', function(){

                    $("#modalSpecTitle").text('Modify Spec');
                     
                    const SpecID = $(this).data('id');
                    const SpecDescription = $(this).data('description');
                    const SpecSubCategoryID = $(this).data('subcategoryid');
                    const SpecStatusID = $(this).data('statusid');
                    const modalEl = document.getElementById("saveSpecModal");
                    const modal = new bootstrap.Modal(modalEl);

                    $("#SpecID").val(SpecID);
                    $("#SpecDescription").val(SpecDescription);
                    $("#SpecSubCategory").val(SpecSubCategoryID);
                    $("#SpecStatusID").val(SpecStatusID);

                    $("#DescriptionMessage").text(''); 

                    $("#SpecDescription").removeClass('border-danger'); 
                     
                    $("#SpecStatusToggle").prop("checked", SpecStatusID == 'A' ? true : false);
                    $("#SpecStatusLabel").text(SpecStatusID == 'A' ? 'Active' : 'Inactive');
                      
                    modal.show();
                     
                    $(modalEl).on('shown.bs.modal', function () {

                        $("#SpecDescription").focus();

                    });

                });

            // Show modal when Delete button clicked
            $(document).on("click", ".btnDeleteSpec", function (e) {
              e.preventDefault();

              const specId = $(this).data("id");
                $("#deletedSpecId").val(specId);

              const specdescription = $(this).closest("tr").find("td:first").text();

              $("#deleteSpecMessage").html(
                `Are you sure you want to delete <strong>${specdescription}</strong>?`
              );

              $("#deleteSpecModal").modal("show");
            });

            
        });

    </script>
}
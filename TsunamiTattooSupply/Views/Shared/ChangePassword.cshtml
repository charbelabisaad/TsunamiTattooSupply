<!-- 🔐 Change Password Modal -->
<!-- ========================= -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="changePasswordForm">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-key text-warning"></i> Change Password
                </h5>
                
            </div>

            <div class="modal-body">
                


                    <div class="form-group">
                        <label>New Password</label>
                        <input id="NewPassword" type="password" class="form-control" name="NewPassword" required>
                    </div>

                    <div class="form-group">
                        <label>Confirm New Password</label>
                        <input id="ConfirmPassword" type="password" class="form-control" name="ConfirmPassword" required>
                    </div>

                    <div id="changePasswordError" class="text-danger text-center d-none"></div>
                    <input id="ChangePasswordDestination" type="hidden" name="ChangePasswordDestination" value="" />
               
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>

                <button type="button" id="btnChangePassword" class="btn btn-warning">
                    <i class="fas fa-save"></i> Update Password
                </button>
            </div>

            </form>

        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {

        // Use event delegation (recommended for modals)
        document.addEventListener('click', function (e) {

            if (!e.target.closest('#btnChangePassword')) return;

            e.preventDefault();

            const btn      = $('#btnChangePassword');
            const form     = $('#changePasswordForm');
            const errorBox = $('#changePasswordError');

            errorBox.addClass('d-none').text('');

            btn.prop('disabled', true).html(
                '<span class="spinner-border spinner-border-sm"></span> Updating...'
            );

            $.ajax({
                url: '/BackEnd/ChangePassword',
                type: 'POST',
                data: form.serialize(),
                dataType: 'json',

                success: function (res) {

                    if (!res.success) {
                        errorBox.removeClass('d-none').text(res.message);

                        // 🔑 re-enable on validation error
                        btn.prop('disabled', false).html(
                            '<i class="fas fa-save"></i> Update Password'
                        );
                        return;
                    }

                    $('#changePasswordModal').modal('hide');
                    form[0].reset();

                    const destination = $('#ChangePasswordDestination').val();

                    if (destination === 'LOGIN') {
                        window.location.href = '/BackEnd/Dashboard/Index';
                    }

                    if (destination === 'LAYOUT') {
                        toastr.success('Password has been changed successfully.');
                    }
                },

                error: function () {
                    errorBox.removeClass('d-none')
                            .text('Server error. Please try again.');
                },

                complete: function () {
                    btn.prop('disabled', false).html(
                        '<i class="fas fa-save"></i> Update Password'
                    );
                }
            });
        });

    });
</script>


